<%- include('partials/head') %> <%- include('partials/navbar') %>

<div class="container entry-form">
  <div
    class="row justify-content-center align-items-center"
    style="height: 80vh"
  >
    <div class="col-12 col-md-10">
      <h2>Edit Form</h2>
      <p>Need to change something?</p>
      <form
        class="entry-form-container"
        action="/registeredevent/<%= noteInfo.id %>/edit?_method=put"
        method="POST"
      >
        <div class="row">
          <div class="col">
            <div class="form-group">
              <label for="instrument">Instrument </label>
              <input
                class="form-control"
                name="instrument"
                id="instrument"
                value="<%= noteInfo.instrument %>"
              />
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <label for="date">Date: </label>
              <input
                class="form-control"
                type="text"
                name="date"
                id="date"
                value="<%= noteInfo.date%>"
              />
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="row">
            <div class="col-8 justify-content-start">
              <label for="obogevents_id">Event: </label>
              <select
                class="form-control"
                name="obogevents_id"
                id="obogevents_id"
              >
                <% data.event.forEach((type) => { %> <% if (type.id ===
                noteInfo.event) { %>
                <option value="<%= type.id %>" selected>
                  <%= type.name %>
                </option>
                <% } else { %>
                <option value="<%= type.id %>"><%= type.name %></option>
                <% } %> <% }) %>
              </select>
            </div>
          </div>
        </div>

        <br /><br />
        <button type="submit" class="btn btn-secondary btn-block">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>

<%- include ('partials/footer') %>
